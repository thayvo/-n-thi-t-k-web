get_sessionID();var removeChar=function(strInput){return strInput.replace(/(<([^>]+)>)/ig,"").replace(/!|@|\$|%|\^|\*|\(|\)|\+|\=|\<|\>|\?|\/|,|\.|\:|\'||\"|\&|\#|\[|\]|~/g,"");}
var convertToAscii=function(str){str=str.toLowerCase();str=str.replace(/!|@|\$|%|\^|\*|\(|\)|\+|\=|\<|\>|\?|\/|,|\.|\:|\'| |\"|\&|\#|\[|\]|~/g," ").replace(/!|@|\$|%|\^|\*|\(|\)|\+|\=|\<|\>|\?|\/|,|\:|\'| |\"|\&|\#|\[|\]|~/g," ").replace(/-+-/g,"-").replace(/ + /g,"-").replace(/^\-+|\-+$/g,"").replace(/^\-+|\-+$/g,"").replace(/ /g,'-');return str;}
function countCart(){let sessionId=localStorage.getItem("cartSessionId");let domain="https://papi.fptshop.com.vn/gw/v1/public/store-front/";if(sessionId&&sessionId!=""){$.ajax({type:"GET",url:domain+`cart?sessionId=${sessionId}&storeType=FShop`,headers:{"order-channel":1},success:function(data){if(data&&data.products&&data.products.length>0){$('.countTotalCart').text(data.products.length);$('.countTotalCart').show();}
else{$('.countTotalCart').hide();}},error:function(){$.ajax({type:"POST",url:"https://papi.fptshop.com.vn/gw/v1/public/store-front/cart/generic-session",headers:{"order-channel":1},success:function(data){if(data&&data.sessionId)
localStorage.setItem("cartSessionId",data.sessionId);}});}});}
else{$('.countTotalCart').hide();}}
